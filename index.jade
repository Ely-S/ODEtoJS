doctype htlm
html.no-js
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/main.css')
    script(data-main='js/main.js', src='js/vendor/require.js')
  body
    #workspace
    #output.output
      .output-toolbar.toolbar.output
        a.chart(href='#chart') line 
        a.chart(href='#chart') bar 
        a.chart(href='#chart') area 
        a.chart(href='#chart') scatterplot 
        a.table(href='#table') table
      hr
      #graphs
    #toolbar
      dl.workspace-toolbar.toolbar
        dd
          a.btn#save(href="#saving") Save 
        dd
          a.btn#load(href="#load") Load 
        dd
          a#run(href='#running') Run 
        dd
          a.btn#btn-stock(href='#new') Stock 
        dd
          a.btn#btn-flow(href='#flow') Flow 
        dd
          a.btn#btn-watch(href='#watch') Watch 
      form#editor(method="get" action="/")
        .row
          input#value(type='text', name="name" placeholder='value', maxlength='200')
          input#formula(type='text', name="formula" placeholder='formula', maxlength='200')
          input(type="submit" value="new variable")
        .row
        .row
          label Time
            input#times(type='number' name="number", value='100', placeholder='Simulation Length')
          label Method 
            select#method
              option(value="Euler", "selected") Euler
              option(value="RK2") RK2
              option(value="RK4") RK4
              option(value="DOPRI") DOPRI
          label dt 
            input#dt(type="number", value=".1", maxlength="10", min=".01")
        input#name(type="text", name="name2" maxlength="100")
        .hidden
          table#table-template.stat-table(data-template='data-template')
            thead
              tr
                th Variable
                th First
                th Last
                th Mean
                th STD. Deviation
                th Max
                th Min
                th total
            tbody
              tr(data-template='data-template')
                td {{name}}
                td {{first}}
                td {{last}}
                td {{n}}
                td {{STDDev}}
                td {{max}}
                td {{min}}
                td {{sum}}
